@model ERP.Presentation.Api.Models.LoginViewModel
@{
    ViewBag.Title = "Efetuar login";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-3">
                            <img class="pull-left" src="~/Images/logo.png" style="height: 27px">
                        </div>
                    </div>
                </div>
                <div class="panel-body">

                    <p class="laranja">
                        Informe o login de acesso previamente criado no sistema.<br />
                        <strong>Atenção</strong> : Somente usuários &#64;tecnun.com.br terão acesso ao sistema.
                    </p>

                    <section id="loginForm">
              
                        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form", id="frmLogin"}))
                        {
                        <fieldset>
                            <div class="row">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-inline col-lg-12">

                                    <div class="input-group" style="margin-bottom: 15px">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "txtEmail" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                    <div class="input-group" style="margin-bottom: 15px">
                                        <span class="input-group-addon"><i>&#64;</i></span>
                                        <button class="btn btn-default" disabled="disabled">tecnun.com.br</button>
                                    </div>

                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "txtSenha", placeholder = "Senha..." })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkbox-inline">
                                        @Html.CheckBoxFor(m => m.RememberMe) Lembrar-me ?
                                    </div>
                                </div>
                            </div>
                            <br />
                        </fieldset>
                            <!-- Change this to a button or input when using this as a form 
                            <a href="../../DashboardLayout/pages/index.html" class="btn btn-lg btn-success btn-block">Entrar</a>
                            -->
                        }

                    </section>
                    
                    <div class="panel-footer">
                        <input type="submit" value="Entrar" class="btn btn-primary" onclick="frmLogin.submit()" />
                        @Html.ActionLink("Registrar", "Registrar", null, new { id = "lnkRegistrar", @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>